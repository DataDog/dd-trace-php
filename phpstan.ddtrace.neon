parameters:
	scanDirectories:
		- src/DDTrace
	scanFiles:
		- bridge/configuration.php
		- bridge/dd_register_optional_deps_autoloader.php
	excludes_analyse:
		- src/DDTrace/Bootstrap.php
		- src/DDTrace/Integrations
