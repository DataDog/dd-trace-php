{
    "$schema":"vendor/phpbench/phpbench/phpbench.schema.json",
    "runner.bootstrap": "./bootstrap_utils.php",
    "runner.path": "Benchmarks",
    "runner.file_pattern": "*Bench.php",
    "runner.php_env": {
        "DD_TRACE_OTEL_ENABLED": "true",
        "DD_TRACE_TEST_SAPI": "cgi-fcgi"
    },
    "runner.php_config": {
        "opcache.enable": "1",
        "opcache.enable_cli": "1"
    },
    "report.generators": {
        "phpbench_aggregate": {
            "extends": "aggregate",
            "cols": [ "subject", "its", "mem_peak", "worst", "mean", "mode", "best", "rstdev" ]
        },
        "all": {
            "generator": "composite",
            "reports": [ "phpbench_aggregate" ]
        }
    },
    "report.outputs": {
        "file": {
            "extends": "csv",
            "file": "tests/Benchmarks/results.csv",
            "delimiter": ","
        }
    }
}
