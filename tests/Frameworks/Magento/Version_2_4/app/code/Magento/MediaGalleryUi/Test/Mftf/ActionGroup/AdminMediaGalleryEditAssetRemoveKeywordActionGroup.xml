<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminMediaGalleryEditAssetRemoveKeywordActionGroup">
        <annotations>
            <description>Remove Keywords on the Edit Details panel</description>
        </annotations>
        <arguments>
            <argument name="keyword" type="string"/>
        </arguments>

        <waitForElementVisible selector="{{AdminEnhancedMediaGalleryEditDetailsSection.removeSelectedKeyword(keyword)}}" stepKey="waitForKeywords"/>
        <waitForElementClickable selector="{{AdminEnhancedMediaGalleryEditDetailsSection.removeSelectedKeyword(keyword)}}" stepKey="waitForKeywordClickable"/>
        <click selector="{{AdminEnhancedMediaGalleryEditDetailsSection.removeSelectedKeyword(keyword)}}" stepKey="removeKeyword"/>
    </actionGroup>
</actionGroups>
