<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Customer:etc/sections.xsd">
    <action name="rest/*/V1/carts/*/payment-information">
        <section name="instant-purchase"/>
    </action>
    <action name="rest/*/V1/carts/*/selected-payment-method">
        <section name="instant-purchase"/>
    </action>
    <action name="customer/address/*">
        <section name="instant-purchase"/>
    </action>
    <action name="customer/account/*">
        <section name="instant-purchase"/>
    </action>
    <action name="vault/cards/deleteaction">
        <section name="instant-purchase"/>
    </action>
</config>