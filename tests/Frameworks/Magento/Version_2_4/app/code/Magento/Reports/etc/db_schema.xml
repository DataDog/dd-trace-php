                comment="Event ID"/>
        <column xsi:type="timestamp" name="logged_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Logged At"/>
        <column xsi:type="smallint" name="event_type_id" unsigned="true" nullable="false" identity="false"
