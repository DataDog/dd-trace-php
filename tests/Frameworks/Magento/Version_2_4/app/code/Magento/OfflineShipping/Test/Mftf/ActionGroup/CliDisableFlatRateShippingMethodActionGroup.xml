<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="CliDisableFlatRateShippingMethodActionGroup">
        <annotations>
            <description>Disable Flat Rate shipping method by CLI command config:set</description>
        </annotations>

        <magentoCLI command="config:set {{DisableFlatRateShippingMethod.path}} {{DisableFlatRateShippingMethod.value}}" stepKey="disableFlatRateShippingMethod"/>
    </actionGroup>
</actionGroups>
