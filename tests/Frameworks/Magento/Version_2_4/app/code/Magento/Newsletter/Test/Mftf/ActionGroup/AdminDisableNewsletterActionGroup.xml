<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminDisableNewsletterActionGroup">
        <annotations>
            <description>Runs bin/magento command to inactive newsletter subscription</description>
        </annotations>
        <magentoCLI command="config:set newsletter/general/active 0" stepKey="disableNewsletter"/>
    </actionGroup>
</actionGroups>
