use Magento\Backend\ViewModel\ChartDisabled;
use Magento\Framework\Escaper;
use Magento\Framework\View\Element\Template;

/**
 * @var Template $block
 * @var Escaper $escaper
 * @var ChartDisabled $viewModel
 * @phpcs:ignoreFile
 */
$viewModel = $block->getViewModel();
?>
<?php if (!$viewModel->isChartEnabled()): ?>
    <div class="dashboard-diagram-disabled">
        <?= $escaper->escapeHtml(__('Chart is disabled. To enable the chart, click <a href="%1">here</a>.', $escaper->escapeUrl($viewModel->getConfigUrl())), ['a']) ?>
    </div>
<?php endif; ?>
