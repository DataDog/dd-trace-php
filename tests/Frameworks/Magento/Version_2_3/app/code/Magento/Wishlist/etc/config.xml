<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <wishlist>
            <general>
                <active>1</active>
                <show_in_sidebar>1</show_in_sidebar>
            </general>
            <email>
                <email_identity>general</email_identity>
                <email_template>wishlist_email_email_template</email_template>
                <number_limit>10</number_limit>
                <text_limit>255</text_limit>
            </email>
        </wishlist>
        <captcha translate="label">
            <frontend>
                <areas>
                    <share_wishlist_form>
                        <label>Share Wishlist Form</label>
                    </share_wishlist_form>
                </areas>
            </frontend>
        </captcha>
        <customer>
            <captcha>
                <shown_to_logged_in_user>
                    <share_wishlist_form>1</share_wishlist_form>
                </shown_to_logged_in_user>
            </captcha>
        </customer>
    </default>
</config>
