<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="paypal_objects" type="host">www.paypalobjects.com</value>
                <value id="braintree_js_gateway" type="host">js.braintreegateway.com</value>
                <value id="paypal_tag_gateway" type="host">www.paypal.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="paypal_objects" type="host">www.paypalobjects.com</value>
                <value id="paypal_analytics" type="host">t.paypal.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="payments_sandbox_braintree_api_com" type="host">payments.sandbox.braintree-api.com</value>
                <value id="origin_analytics_sand_sandbox_braintree_api_com" type="host">origin-analytics-sand.sandbox.braintree-api.com</value>
                <value id="assets_braintreegateway_com" type="host">assets.braintreegateway.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="assets_braintreegateway_com" type="host">assets.braintreegateway.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
