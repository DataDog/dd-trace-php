    <actionGroup name="saveConfigurableProduct">
        <annotations>
            <description>Save configurable product</description>
        </annotations>
        <arguments>
            <argument name="product" defaultValue="_defaultProduct"/>
        </arguments>
        <click selector="{{AdminProductFormActionSection.saveButton}}" stepKey="clickOnSaveButton"/>
        <click selector="{{AdminChooseAffectedAttributeSetPopup.confirm}}" stepKey="clickOnConfirmInPopup"/>
        <seeElement selector="{{AdminProductMessagesSection.successMessage}}" stepKey="seeSaveProductMessage"/>
        <seeInTitle userInput="{{product.name}}" stepKey="seeProductNameInTitle"/>
    </actionGroup>

    <!--
    NOTICE: generateConfigurationsByAttributeCode is deprecated.
            Please use GenerateConfigurationsByAttributeCodeActionGroup instead.
