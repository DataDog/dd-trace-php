<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminStoresTaxRulesNavigateMenuTest">
        <annotations>
            <features value="Tax"/>
            <stories value="Menu Navigation"/>
            <title value="Admin stores tax rules navigate menu test"/>
            <description value="Admin should be able to navigate to Stores > Tax Rules"/>
            <severity value="CRITICAL"/>
            <testCaseId value="MC-14175"/>
            <group value="menu"/>
            <group value="mtf_migrated"/>
        </annotations>
        <before>
            <actionGroup ref="LoginAsAdmin" stepKey="LoginAsAdmin"/>
        </before>
        <after>
            <actionGroup ref="logout" stepKey="logout"/>
        </after>
        <actionGroup ref="AdminNavigateMenuActionGroup" stepKey="navigateToStoresTaxRulesPage">
            <argument name="menuUiId" value="{{AdminMenuStores.dataUiId}}"/>
            <argument name="submenuUiId" value="{{AdminMenuStoresTaxesTaxRules.dataUiId}}"/>
        </actionGroup>
        <actionGroup ref="AdminAssertPageTitleActionGroup" stepKey="seePageTitle">
            <argument name="title" value="{{AdminMenuStoresTaxesTaxRules.pageTitle}}"/>
        </actionGroup>
    </test>
</tests>
